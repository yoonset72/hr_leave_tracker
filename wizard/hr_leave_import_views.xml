<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard form view -->
    <record id="view_hr_leave_import_form" model="ir.ui.view">
        <field name="name">hr.leave.import.form</field>
        <field name="model">hr.leave.import</field>
        <field name="arch" type="xml">
            <form string="Import Historical Leave Data">
                <sheet>
                    <div class="oe_title">
                        <h1>Import Historical Leave Data</h1>
                    </div>
                    
                    <group string="Import Settings">
                        <field name="import_file" filename="import_filename" required="1"/>
                        <field name="import_filename" invisible="1"/>
                        <field name="file_type" readonly="1"/>
                        <field name="year" required="1"/>
                        <field name="update_existing"/>
                    </group>
                    
                    <group string="Template" attrs="{'invisible': [('import_results', '!=', False)]}">
                        <div class="alert alert-info" role="alert">
                            <strong>Required Columns:</strong> Employee ID, Employee Name, Leave Type, Total Allocated, Days Taken, Pending Requests
                        </div>
                        <button name="action_download_template" 
                                type="object" 
                                string="Download Template" 
                                class="btn-link">
                            <i class="fa fa-download"/>
                        </button>
                    </group>
                    
                    <group string="Import Results" attrs="{'invisible': [('import_results', '=', False)]}">
                        <field name="import_results" nolabel="1" readonly="1" widget="text"/>
                    </group>
                </sheet>
                
                <footer>
                    <button name="action_import_data" 
                            type="object"
                            string="Import Data"
                            class="btn-primary"
                            attrs="{'invisible': [('import_results', '!=', False)]}"/>
                    
                    <!-- One cancel button that changes its label -->
                    <button special="cancel" 
                            string="Cancel" 
                            attrs="{'invisible': [('import_results', '!=', False)]}"/>
                    <button special="cancel" 
                            string="Close" 
                            attrs="{'invisible': [('import_results', '=', False)]}"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_hr_leave_import" model="ir.actions.act_window">
        <field name="name">Import Historical Leave Data</field>
        <field name="res_model">hr.leave.import</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_hr_leave_import_form"/>
        <field name="target">new</field>
        <field name="context">{}</field>
    </record>
    
    <!-- Menu -->
    <menuitem id="menu_hr_leave_import"
              name="Import Historical Data"
              parent="hr_leave_tracker.menu_hr_leave_tracker_root"
              action="action_hr_leave_import"
              sequence="15"/>
</odoo>
